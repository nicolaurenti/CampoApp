<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/activity_splash</item>
    </style>

    <style name="title_card_view">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="information_card_view">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="information_text_style">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">35dp</item>
    </style>

    <style name="information_data_style" parent="information_text_style">
    </style>
</resources>