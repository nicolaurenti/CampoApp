<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_client"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/potrero_name_text_view"
            style="@style/title_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Potrero A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hectares_potreros_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/information_card_view"
            tools:text="(121 ha.)"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/potrero_name_text_view"
            app:layout_constraintBottom_toBottomOf="@id/potrero_name_text_view"/>

        <TextView
            android:id="@+id/resource_title_text_view"
            style="@style/information_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resources_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/potrero_name_text_view"/>

        <TextView
            android:id="@+id/observation_title_text_view"
            style="@style/information_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Obs.:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resource_title_text_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>